#!/bin/bash
sed -i '1,/\}/d' ./sspi_flask_app/client/static/js/color-map.js
TMPFILE=$(mktemp)
echo "// DO NOT EDIT THIS FILE DIRECTLY! UPDATE VIA scripts/update_colors" >> $TMPFILE
jq < ./local/sspi-colors.json | sed 's/{/const customCountryColors = {/' >> $TMPFILE
cat ./sspi_flask_app/client/static/js/color-map.js >> $TMPFILE
cat $TMPFILE >| ./sspi_flask_app/client/static/js/color-map.js
